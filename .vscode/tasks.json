{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Workflow Debug",
            "type": "shell",
            "command": "cmake --workflow --preset workflow-debug",
            "group": "build"
        },
        {
            "label": "CMake Workflow Release",
            "type": "shell",
            "command": "cmake --workflow --preset workflow-release",
            "group": "build"
        },
        {
            "label": "CMake Install",
            "type": "shell",
            "command": "cmake --install build",
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "Build & Install Debug",
            "dependsOrder": "sequence",
            "dependsOn": [
                "CMake Workflow Debug",
                "CMake Install"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build & Install Release",
            "dependsOrder": "sequence",
            "dependsOn": [
                "CMake Workflow Release",
                "CMake Install"
            ],
            "group": "build"
        }
    ]
}